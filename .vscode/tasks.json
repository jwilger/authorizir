{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Stale Tests",
      "type": "shell",
      "command": "mix test --stale",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [
        "$mixTestFailure",
        "$mixCompileError",
        "$mixCompileWarning"
      ]
    },
    {
      "label": "Run All Quality Checks",
      "type": "shell",
      "command": "mix quality",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [
        "$mixTestFailure",
        "$mixCompileError",
        "$mixCompileWarning"
      ]
    },
    {
      "label": "Run Phoenix Server (iex)",
      "type": "shell",
      "command": "iex -S mix phx.server",
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning"
      ]
    }
  ]
}